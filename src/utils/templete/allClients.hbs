<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>A simple, clean, and responsive HTML invoice template</title>
  <style>
    .center {
      text-align: center;
    }

    .invoice-box {
      max-width: 800px;
      margin: auto;
      padding: 30px;
      font-size: 16px;
      line-height: 24px;
      font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
      color: #555;
    }

    .invoice-box table {
      width: 100%;
      line-height: inherit;
      text-align: left;

    }

    .border-table {
      border: 1px solid #ddd;
      padding: 0px;
      margin-bottom: 20px;
    }

    .invoice-box table td {
      padding: 0px;
      vertical-align: top;
    }

    .invoice-box table tr td:nth-child(2) {
      text-align: left;
    }

    .invoice-box table tr.top table td {
      padding-bottom: 20px;
    }

    .invoice-box table tr.top table td.title {
      font-size: 45px;
      line-height: 45px;
      color: #333;
    }

    .invoice-box table tr.information table td {
      padding-bottom: 40px;
    }

    .invoice-box table tr.heading td {
      border-bottom: 0px solid #ddd;
      font-weight: bold;
    }

    .invoice-box table tr.heading-start td {
      margin-top: 10px;
    }

    .invoice-box table tr.details td {
      padding-bottom: 20px;
    }

    .invoice-box table tr.item td {
      padding-top: 5px;
      font-size: 13px;
      border-bottom: 0px solid #eee;
    }

    .invoice-box table tr.item-last td {
      font-size: 13px;
      border: none;
      padding-bottom: 20px;
    }

    .invoice-box table tr.item-end td {
      font-size: 12px;
      border-bottom: 0px solid #eee;
    }

    .invoice-box table tr.item.last td {
      border-bottom: none;
    }

    .invoice-box table tr.total td:nth-child(2) {
      border-top: 2px solid #eee;
      font-weight: bold;
    }

    .item-name {
      color: rgb(42, 42, 42);
      font-weight: bold;
    }

    @media only screen and (max-width: 600px) {
      .invoice-box table tr.top table td {
        width: 100%;
        display: block;
        text-align: center;
      }

      .invoice-box table tr.information table td {
        width: 100%;
        display: block;
        text-align: center;
      }
    }

    /** RTL **/
    .rtl {
      direction: ltr;
      font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }

    .rtl table {
      text-align: left;
    }

    .rtl table tr td:nth-child(2) {
      text-align: left;
    }
  </style>
</head>

<body>
  <div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
      <tr class="top">
        <td colspan="2">
          <table>
            <tr>
              <td class="title">
                <img src="https://saibweb.com.br/saibweb/uploads/2019/05/Logo_Saibweb.svg"
                  style="height: 80px; width:100%; max-width:300px;">
              </td>

              <td>
                <strong>Relatório</strong> n° 123<br>
                4 Março, 2021
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    <h2 class="center">Relatório de Clientes</h2>
    <table>
      <tr class="heading heading-start">
        <td>Nome</td>
        <td>CPF/CNPJ</td>
        <td>Telefone</td>
        <td>Nasc.</td>
        <td>Criado em</td>
      </tr>
      {{#each clients}}
      <tr class="item item-name">
        <td>{{normalizeNome CLI_NOME }}</td>
        <td>{{normalizeCpf CLI_CNPJ_CPF }}</td>
        <td>{{normalizeFone CLI_FONE }}</td>
        <td>{{normalizeData CLI_DATANASC }}</td>
        <td>{{normalizeData CLI_DATACAD }}</td>
      </tr>
      <tr class="item">
        <td colspan="5" class="item-last">
          <table class="border-table">
            {{#if CLIENTE_E }}
            <tr class="heading heading-end">
              <td>Cep</td>
              <td>Tipo</td>
              <td>Endereço</td>
              <td>Bairro</td>
              <td>Cidade</td>
              <td>UF</td>
            </tr>
            {{#each CLIENTE_E}}
            <tr class="item item-end">
              <td>{{normalizeCep CLIE_CEP }}</td>
              <td>{{CLIE_TIPO }}</td>
              <td>{{normalizeNome CLIE_ENDERECO }}</td>
              <td>{{normalizeNome CLIE_BAIRRO }}</td>
              <td>{{normalizeNome CLIE_CIDADE }}</td>
              <td>{{CLIE_UF }}</td>
            </tr>
            {{/each}}
            {{/if}}
          </table>
        </td>
      </tr>
      {{/each}}
    </table>
  </div>
  <script>
  </script>
</body>

</html>